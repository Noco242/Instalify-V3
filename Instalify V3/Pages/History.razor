@page "/history"

<PageTitle>Befehlshistorie</PageTitle>

<h1>Befehlshistorie</h1>

<div class="history-container">
    <div class="history-list">
        @foreach (var command in commandHistory)
        {
            <div class="history-item">
                <p><strong>Datum:</strong> @command.Date</p>
                <p><strong>Befehl:</strong> @command.CommandText</p>
            </div>
        }
    </div>
</div>

@code {
    private List<CommandHistory> commandHistory = new List<CommandHistory>();

    public class CommandHistory
    {
        public DateTime Date { get; set; }
        public string CommandText { get; set; }
    }

    // Beispiel: Füllen der Historie
    protected override void OnInitialized()
    {
        commandHistory.Add(new CommandHistory { Date = DateTime.Now, CommandText = "winget install VLC" });
        commandHistory.Add(new CommandHistory { Date = DateTime.Now.AddDays(-1), CommandText = "winget install Git" });
    }
}
