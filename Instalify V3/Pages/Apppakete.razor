@code {

    // JavaScript-Funktion für das Kopieren in die Zwischenablage
    private string CopyToClipboardFunction => @"
        function copyToClipboard(text) {
            var dummy = document.createElement('textarea');
            document.body.appendChild(dummy);
            dummy.value = text;
            dummy.select();
            document.execCommand('copy');
            document.body.removeChild(dummy);
            alert('Text kopiert: ' + text);
        }
    ";

    // Paketdefinitionen
    private string gamingPack = "winget install Steam \n Discord \n EpicGames.EpicGamesLauncher \n ElectronicArts.Origin \n Ubisoft.UbisoftConnect \n Blizzard.BattleNet";
    private string developmentPack = "winget install VisualStudioCode \n JetBrains.Rider \n Git \n NodeJS \n Python";
    private string designPack = "winget install Adobe.CreativeCloud \n Affinity.Designer \n InVision.Studio \n Figma";
    private string officePack = "winget install Microsoft.Office \n LibreOffice \n WPS.Office";
    private string multimediaPack = "winget install VLC \n Adobe.Audition \n DaVinciResolve";
    private string securityPack = "winget install Malwarebytes \n Avast \n NordVPN";
    private string utilitiesPack = "winget install 7zip \n CCleaner \n WinRAR";
    private string educationPack = "winget install Moodle \n Edmodo \n KhanAcademy";
    private string communicationPack = "winget install Slack \n Microsoft.Teams \n Zoom";
    private string socialMediaPack = "winget install Facebook \n Instagram \n Twitter";

    // Injection von IJSRuntime für die Interaktion mit JavaScript
    [Inject]
    private IJSRuntime JSRuntime { get; set; }

    // C#-Methode, die die JavaScript-Funktion aufruft und den Text zum Kopieren übergibt
    private async Task DownloadPackage(string package)
    {
        await JSRuntime.InvokeVoidAsync("eval", CopyToClipboardFunction);
        await JSRuntime.InvokeVoidAsync("copyToClipboard", package);
    }

    // Methoden für das Herunterladen der einzelnen Pakete
    private void DownloadGamingPack()
    {
        DownloadPackage(gamingPack);
    }

    private void DownloadDevelopmentPack()
    {
        DownloadPackage(developmentPack);
    }

    private void DownloadDesignPack()
    {
        DownloadPackage(designPack);
    }

    private void DownloadOfficePack()
    {
        DownloadPackage(officePack);
    }

    private void DownloadMultimediaPack()
    {
        DownloadPackage(multimediaPack);
    }

    private void DownloadSecurityPack()
    {
        DownloadPackage(securityPack);
    }

    private void DownloadUtilitiesPack()
    {
        DownloadPackage(utilitiesPack);
    }

    private void DownloadEducationPack()
    {
        DownloadPackage(educationPack);
    }

    private void DownloadCommunicationPack()
    {
        DownloadPackage(communicationPack);
    }

    private void DownloadSocialMediaPack()
    {
        DownloadPackage(socialMediaPack);
    }
}
